type User {
  id: ID! @id
  name: String!
  email: String! @unqiue
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  posts: [Post]
}

type Post {
  id: ID! @id
  title: String!
  content: String!
  published: Boolean! @default(value: false)
  author: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}